@using WebOnline.Models
@{
    ViewBag.Title = "SanPhamBanChay";
    List<SanPham> lstTrangSanPhamBanChay = ViewBag.TrangSanPhamBanChay;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*Sản phẩm bán chạy nhất*@
<div class="top-brands">
    <div class="container">
        <h3>Sản phẩm bán chạy </h3>
        <div class="agile_top_brands_grids">

            @foreach (var item in lstTrangSanPhamBanChay)
            {
                <div class="col-md-3 top_brand_left">
                    <div class="hover14 column">
                        <div class="agile_top_brand_left_grid">
                            <div class="tag"><img src="~/Content/images/tag.png" alt=" " class="img-responsive" /></div>
                            <div class="agile_top_brand_left_grid1">
                                <figure>
                                    <div class="snipcart-item block">
                                        <div class="snipcart-thumb">
                                            <a href="@Url.Action("Details","Home", new { id=item.MaSanPham})"><img title=" " alt=" " src="~/Content/images/@item.HinhMinhHoa" class="img-responsive" /></a>
                                            <p class="center">@item.TenSanPham</p>
                                            <h4 class="center">@item.DonGia</h4>
                                        </div>
                                        <div class="snipcart-details top_brand_home_details">
                                            <form action="checkout.html" method="post">
                                                <fieldset>
                                                    <input type="hidden" name="cmd" value="_cart" />
                                                    <input type="hidden" name="add" value="1" />
                                                    <input type="hidden" name="business" value=" " />
                                                    <input type="hidden" name="item_name" value="@item.TenSanPham" />
                                                    <input type="hidden" name="amount" value="@item.DonGia" />
                                                    @*<input type="hidden" name="discount_amount" value="1.00" />*@
                                                    <input type="hidden" name="currency_code" value="VND" />
                                                    <input type="hidden" name="return" value=" " />
                                                    <input type="hidden" name="cancel_return" value=" " />
                                                    <input type="submit" name="submit" value="Thêm vào giỏ hàng" class="button" />
                                                </fieldset>

                                            </form>

                                        </div>
                                    </div>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="clearfix"> </div>
    </div>
</div>

