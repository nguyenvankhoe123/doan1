    <script>
        paypal.minicart.render();

        paypal.minicart.cart.on('checkout', function (evt) {
            var items = this.items(),
                len = items.length,
                total = 0,
                i;

            // Count the number of each item in the cart
            for (i = 0; i < len; i++) {
                total += items[i].get('quantity');
            }

            if (total < 1) {
                alert('Số lượng đặt hàng tối thiểu là 1. Vui lòng thêm sản phẩm vào giỏ hàng của bạn trước khi thanh toán');
